@model IEnumerable<microweather.Models.Observation>
@{
    ViewData["Title"] = "MicroWeather";
}

<!DOCTYPE html>

<head>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate, max-age=30" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="-1" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/ec2f8e8426.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.20/b-1.6.1/b-colvis-1.6.1/b-html5-1.6.1/b-print-1.6.1/r-2.2.3/sc-2.0.1/sp-1.0.1/sl-1.3.1/datatables.min.css" />

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.20/b-1.6.1/b-colvis-1.6.1/b-html5-1.6.1/b-print-1.6.1/r-2.2.3/sc-2.0.1/sp-1.0.1/sl-1.3.1/datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table1').DataTable();
        });
    </script>
</head>
<title>MicroWeather</title>

<body style="background-color: #134280">
    <div class="container-fluid">
        <br />
        <div class="row h-100 justify-content-center align-items-center">
            <div class="card text-white bg-dark" style="width: 70%;">

                <br />
                <div class="row no-gutters mx-auto">
                    <h5>
                        MicroWeather information
                    </h5>
                </div>

                <div class="row no-gutters">
                    <div class="col">
                        <img src="image.jpg" class="card-img-top"> 
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="table1" class="table table-dark table-bordered table-striped table-condensed">
                                    <thead>
                                        <tr>
                                            <th scope="col">Time Measured (UTC)</th>
                                            <th scope="col">Wind Speed (km/h)</th>
                                            <th scope="col">Wind Direction</th>
                                            <th scope="col">Rain Rate (mm/h)</th>
                                            <th scope="col">Temperature (°C)</th>
                                            <th scope="col">Pressure (hPa)</th>
                                            <th scope="col">Humidity (%)</th>
                                            <th scope="col">Soil Moisture Index</th>
                                            <th scope="col">Soil Temperature (°C)</th>
                                            <th scope="col">Altitude</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.timestamp)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.wind_speed)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.wind_direction)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.rain_rate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.temperature)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.pressure)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.humidity)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.soil_moisture)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.soil_temp)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.altitude)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</body>
